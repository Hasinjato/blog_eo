<div class="md-modal md-effect-13" id="modal-13">
    <div class="md-content">
        <h3>Publier quelque chose</h3>
        <div>
            <div class="modal-body">
                <form action="/articles/create" method="POST" enctype="multipart/form-data">
                    <div class="form-group m-2">
                        <input type="text" name="title" id="title" placeholder="Titre ..." required>
                    </div>
                    <div class="form-group m-2">
                        <input name="image" type="file">
                    </div>
                    <div class="form-group m-2">
                        <textarea class="form-control" name="content" id="content" cols="15" rows="5" placeholder="Contenu ..." required></textarea>
                    </div>
                    <button class="btn btn-primary d-inline-block" type="submit">Publier</button>
                    <button type="button" class="btn btn-primary waves-effect md-close  d-inline-block">Close</button>
                </form>
            </div>
        </div>
    </div>
</div>